@model IEnumerable<Capa_Entidad.ListarPelicula_Result>

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_User.cshtml"; }
@using Capa_Entidad;
<section class="hero">
    <div class="container-fluid" style="padding: 0 10%">
        <div class="hero__slider owl-carousel">
            @foreach (ListarUltimaPelicula_Result item in ViewBag.Ultimas_Peliculas)
            {
                <div class="hero__items set-bg" data-setbg="@item.Imagen">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="hero__text">
                                <div class="label">@item.Nombre_Genero</div>
                                <h2>@item.Titulo</h2>
                                <p>@item.Sipnosis</p>
                                <a href="@Url.Action("Detail", "User", new { id = item.ID_Pelicula })"><span>Ver Más detalles</span> <i class="fa fa-angle-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>}
        </div>
    </div>
</section>
<!-- Product Section Begin -->
<section class="product spad">
    <div class="container-fluid " style=" padding: 0 10%">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="trending__product">
                    <div class="row">
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            <div class="section-title">
                                <h4>Movies</h4>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @{
                            var r = new Random();
                        }
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-2 col-md-4 col-sm-4">
                                <div class="product__item">
                                    <div class="product__item__pic set-bg" data-setbg="@item.Imagen">
                                        <div class="ep">@item.Duracion</div>
                                        <div class="comment"><i class="fa fa-comments"></i> @r.Next(100)</div>
                                        <div class="view"><i class="fa fa-eye"></i> @r.Next(1000)</div>
                                    </div>
                                    <div class="product__item__text">
                                        <ul>
                                            <li>Active</li>
                                            <li>Movie</li>
                                        </ul>
                                        <h5><a href="@Url.Action("Detail", "User", new { id = item.ID_Pelicula })">@item.Titulo</a></h5>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Section End -->
